<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    tools:viewBindingIgnore="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textSize="24dp"
            android:lineHeight="26dp"
            android:text="Recupere sua senha"
            android:textColor="@color/main_black"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:textSize="17dp"
            android:lineHeight="25dp"
            android:textColor="@color/main_black"
            android:text="@string/recuperar_campoEmail"
            android:layout_marginBottom="26dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:hint="Email"
            android:layout_marginBottom="15dp"
            android:padding="14dp"
            android:textSize="14dp"
            android:textColor="@color/main_black"
            android:background="@drawable/borda_edittextfield"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordar_btnprincipal"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:fontFamily="@font/robotobold"
            android:text="Recuperar senha"
            android:textAllCaps="false"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.circularreveal.CircularRevealGridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recuperar_voltarLogin"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/main_blue"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/robotobold"
                android:text="@string/recuperar_voltarCadastro"
                android:textColor="@color/main_blue"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp" />

        </com.google.android.material.circularreveal.CircularRevealGridLayout>





    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>