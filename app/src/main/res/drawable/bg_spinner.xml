<!-- bg_spinner.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo padrão -->
            <corners android:radius="8dp" /> <!-- Borda arredondada -->
        </shape>
    </item>
    <!-- Estado quando pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Cor de fundo quando pressionado -->
            <corners android:radius="8dp" /> <!-- Borda arredondada -->
        </shape>
    </item>
</selector>
